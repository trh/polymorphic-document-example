%p#notice= notice
.row
  .col
    %h3 Receipt Info
    %strong Title:
    = @receipt.title
    %br/
    %strong Occurred at:
    = @receipt.occurred_at
    %br/
    %strong Status:
    = @receipt.status
    %br/
  .col
    %h3 Uploaded Receipt
    = link_to "Receipt View", @receipt.document.file.url


.row
  .col-12
    = link_to 'Edit', edit_receipt_path(@receipt)
    |
    = link_to 'Back', receipts_path

